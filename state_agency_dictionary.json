  },
  "template_usage": {
    "instruction": "Replace placeholders with actual state data:",
    "placeholders": {
      "[Function]": "Specific government function (e.g., Transportation, Health)",
      "[State]": "Full state name",
      "[abbreviation]": "Two-letter postal code",
      "[statename]": "State name in lowercase, no spaces",
      "[agency_acronym]": "Official agency abbreviation",
      "[agency_path]": "URL-friendly agency name",
      "[university_acronym]": "University abbreviation (e.g., UCLA, UT)",
      "[hospital_name]": "Hospital or medical center name",
      "[medical_center]": "Medical facility name abbreviation"
    }
  }
}