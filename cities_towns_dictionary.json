  "domain_validation": {
    "government": {
      "primary_tld": ".gov",
      "alternative_tlds": [".org", ".us", ".com"],
      "verification_note": ".gov is preferred but many local governments use .org due to historical reasons or cost"
    },
    "education": {
      "primary_tld": ".org",
      "alternative_tlds": [".edu", ".net", ".k12.[state].us"],
      "note": "School districts often use .org or .k12.[state].us domains"
    },
    "special_districts": {
      "common_tlds": [".org", ".gov", ".net"],
      "note": "Special districts typically use .org domains"
    },
    "official_indicators": [
      "Official government seals/logos",
      "Matching contact information with public records",
      "Links to other verified government sites",
      "Presence on official state government directories"
    ]
  },
  "classification_guidelines": {
    "county_criteria": [
      "Administrative subdivision of a state",
      "Provides regional services",
      "Typically includes multiple municipalities",
      "Led by Board of Supervisors/Commissioners"
    ],
    "city_criteria": [
      "Incorporated municipality",
      "Self-governing under municipal charter",
      "Provides local services (police, fire, zoning)",
      "May be independent or within a county"
    ],
    "town_criteria": [
      "Smaller incorporated municipality",
      "Often part of a county government structure",
      "May have limited self-governing authority",
      "Common in New England and some other regions"
    ],
    "special_district_criteria": [
      "Independent governmental unit",
      "Single function or limited functions",
      "May cross municipal/county boundaries",
      "Governed by appointed or elected board"
    ]
  },
  "template_usage": {
    "instruction": "Replace placeholders with actual local government data:",
    "placeholders": {
      "[County Name]": "Name of the county",
      "[City Name]": "Name of the city",
      "[Town Name]": "Name of the town",
      "[Jurisdiction]": "Name of the local government entity",
      "[countyname]": "County name in lowercase, no spaces",
      "[cityname]": "City name in lowercase, no spaces",
      "[townname]": "Town name in lowercase, no spaces",
      "[state_abbrev]": "Two-letter state postal code",
      "[parishname]": "Parish name in lowercase, no spaces",
      "[district]": "Special district name abbreviation",
      "[agency]": "Department or agency name abbreviation"
    }
  }
}