{
  "metadata": {
    "description": "Template for U.S. local government (county, city, town) naming conventions, domains, and services",
    "last_updated": "2024-10-17",
    "geographic_levels": ["county", "city", "town", "township", "municipality", "borough", "parish"],
    "note": "Local government structures vary significantly by state and region"
  },
  "local_government": {
    "types": ["county", "city", "town", "township", "municipality", "borough", "parish"],
    "geographic_variations": {
      "county_equivalent": "parish (Louisiana), borough (Alaska), independent city (Virginia, Maryland)"
    }
  },
  "naming_patterns": [
    {
      "pattern": "[County Name] County",
      "description": "Standard county naming format",
      "examples": ["Los Angeles County", "Cook County"],
      "prevalence": "primary"
    },
    {
      "pattern": "County of [County Name]",
      "description": "Formal county naming format",
      "examples": ["County of San Diego", "County of Orange"],
      "prevalence": "formal"
    },
    {
      "pattern": "City of [City Name]",
      "description": "Standard city naming format",
      "examples": ["City of Chicago", "City of Phoenix"],
      "prevalence": "primary"
    },
    {
      "pattern": "Town of [Town Name]",
      "description": "Standard town naming format",
      "examples": ["Town of Arlington", "Town of Cary"],
      "prevalence": "primary"
    },
    {
      "pattern": "[Jurisdiction] Government",
      "description": "General government reference",
      "examples": ["New York City Government", "Cook County Government"],
      "prevalence": "common"
    },
    {
      "pattern": "[Jurisdiction] Municipal Government",
      "description": "Alternative municipal reference",
      "examples": ["Houston Municipal Government"],
      "prevalence": "alternate"
    }
  ],
  "domain_patterns": [
    {
      "pattern": "[countyname]county.gov",
      "example": "lacounty.gov",
      "description": "Most common pattern for counties",
      "format": "direct_domain",
      "institution_type": ["county"]
    },
    {
      "pattern": "co.[countyname].[state_abbrev].us",
      "example": "co.clark.nv.us",
      "description": "State-specific county domain pattern",
      "format": "subdomain",
      "institution_type": ["county"]
    },
    {
      "pattern": "[cityname].gov",
      "example": "chicago.gov",
      "description": "Standard for major cities",
      "format": "direct_domain",
      "institution_type": ["city"]
    },
    {
      "pattern": "ci.[cityname].[state_abbrev].us",
      "example": "ci.phoenix.az.us",
      "description": "Common for smaller cities",
      "format": "subdomain",
      "institution_type": ["city"]
    },
    {
      "pattern": "townof[townname].org",
      "example": "townofcary.org",
      "description": "Common for towns",
      "format": "direct_domain",
      "institution_type": ["town"]
    },
    {
      "pattern": "[townname]-[state_abbrev].gov",
      "example": "brookline-ma.gov",
      "description": "State-identified pattern for towns",
      "format": "direct_domain",
      "institution_type": ["town"]
    },
    {
      "pattern": "[parishname]parish.gov",
      "example": "lafayetteparish.gov",
      "description": "Louisiana parish pattern",
      "format": "direct_domain",
      "institution_type": ["parish"]
    }
  ],
  "common_local_services": {
    "public_safety": {
      "typical_name": "[Jurisdiction] Police Department",
      "common_subsidiaries": [
        {
          "name_pattern": "[Jurisdiction] Police Department",
          "domain_example": "police.[jurisdiction].gov",
          "function": "Law enforcement"
        },
        {
          "name_pattern": "[Jurisdiction] Fire Department",
          "domain_example": "fire.[jurisdiction].gov",
          "function": "Fire protection and emergency response"
        },
        {
          "name_pattern": "[Jurisdiction] Sheriff's Office",
          "domain_example": "[jurisdiction]sheriff.org",
          "function": "County law enforcement (typically county-level)"
        }
      ],
      "variations": [
        "Department of Police",
        "Police Bureau",
        "Public Safety Department"
      ]
    },
    "public_works": {
      "typical_name": "[Jurisdiction] Department of Public Works",
      "acronym": "DPW",
      "domain_example": "dpw.[jurisdiction].gov",
      "sub_agencies": [
        "Water Department",
        "Sanitation Department",
        "Highway/Street Department"
      ]
    },
    "health": {
      "typical_name": "[Jurisdiction] Health Department",
      "variations": [
        "Department of Public Health",
        "Board of Health"
      ],
      "domain_example": "health.[jurisdiction].gov",
      "note": "May be county-level serving multiple municipalities"
    },
    "planning_development": {
      "typical_name": "[Jurisdiction] Planning Department",
      "variations": [
        "Department of Planning and Development",
        "Community Development Department"
      ],
      "domain_example": "planning.[jurisdiction].gov",
      "sub_agencies": [
        "Zoning Board",
        "Building Department",
        "Code Enforcement"
      ]
    },
    "recreation": {
      "typical_name": "[Jurisdiction] Parks and Recreation Department",
      "variations": [
        "Department of Parks and Recreation",
        "Recreation Department"
      ],
      "domain_example": "parks.[jurisdiction].gov"
    },
    "administrative": {
      "typical_name": "[Jurisdiction] Clerk's Office",
      "variations": [
        "City/County Clerk",
        "Registrar's Office"
      ],
      "domain_example": "clerk.[jurisdiction].gov",
      "related_services": [
        "Assessor's Office",
        "Treasurer's Office",
        "Elections Office"
      ]
    }
  },
  "special_districts": {
    "definition": "Independent governmental units with specific functions, often crossing municipal boundaries",
    "types": [
      {
        "type": "School Districts",
        "naming_pattern": "[Area] School District",
        "domain_pattern": "[district].k12.[state].us",
        "function": "Public education"
      },
      {
        "type": "Water Districts",
        "naming_pattern": "[Area] Water District",
        "domain_pattern": "[district]water.org",
        "function": "Water supply and distribution"
      },
      {
        "type": "Transit Authorities",
        "naming_pattern": "[Region] Transit Authority",
        "domain_pattern": "[authority].org",
        "function": "Public transportation"
      },
      {
        "type": "Library Districts",
        "naming_pattern": "[Area] Library District",
        "domain_pattern": "[library].org",
        "function": "Public library services"
      }
    ]
  },
  "regional_variations": {
    "new_england": {
      "characteristics": ["Strong town governments", "Town meetings", "Weak or no county governments"],
      "domain_patterns": [
        "townof[townname].us",
        "[townname]-ma.gov",
        "[townname].us"
      ],
      "naming_conventions": [
        "Town of [Name]",
        "[Name] Town Government"
      ]
    },
    "mid_atlantic": {
      "characteristics": ["Strong county governments", "Townships common"],
      "domain_patterns": [
        "co.[countyname].nj.us",
        "townshipof[townname].org"
      ]
    },
    "south": {
      "characteristics": ["Strong county governments", "Parishes in Louisiana"],
      "domain_patterns": [
        "[parishname]parish.gov (LA)",
        "co.[countyname].[state].us"
      ]
    },
    "midwest": {
      "characteristics": ["Mix of county and township governments"],
      "domain_patterns": [
        "co.[countyname].[state].us",
        "townshipof[townname].org"
      ]
    },
    "west": {
      "characteristics": ["Strong city governments", "Weak county governments in some areas"],
      "domain_patterns": [
        "[cityname].gov",
        "countyof[countyname].org"
      ]
    }
  },
  "state_examples": {
    "california": {
      "naming_style": "[City/County] of [Name]",
      "county_pattern": "[countyname]county.gov",
      "city_pattern": "cityof[cityname].org",
      "example_governments": [
        {
          "name": "Los Angeles County",
          "domain": "lacounty.gov",
          "type": "county"
        },
        {
          "name": "City of Los Angeles",
          "domain": "lacity.gov",
          "type": "city"
        },
        {
          "name": "City of San Francisco",
          "domain": "sf.gov",
          "type": "city"
        }
      ]
    },
    "texas": {
      "naming_style": "[City/County] of [Name]",
      "county_pattern": "co.[countyname].tx.us",
      "city_pattern": "ci.[cityname].tx.us",
      "example_governments": [
        {
          "name": "Harris County",
          "domain": "harriscountytx.gov",
          "type": "county"
        },
        {
          "name": "City of Houston",
          "domain": "houstontx.gov",
          "type": "city"
        }
      ]
    },
    "new_york": {
      "naming_style": "[Name] County/City",
      "county_pattern": "[countyname]countyny.gov",
      "city_pattern": "[cityname].gov",
      "note": "Extensive use of .com domains for local governments",
      "example_governments": [
        {
          "name": "New York City",
          "domain": "nyc.gov",
          "type": "city"
        },
        {
          "name": "Westchester County",
          "domain": "westchestergov.com",
          "type": "county"
        }
      ]
    },
    "florida": {
      "naming_style": "[Name] County/City",
      "county_pattern": "[countyname]fl.gov",
      "city_pattern": "[cityname]fl.gov",
      "example_governments": [
        {
          "name": "Miami-Dade County",
          "domain": "miamidade.gov",
          "type": "county"
        },
        {
          "name": "City of Miami",
          "domain": "miami.gov",
          "type": "city"
        }
      ]
    },
    "louisiana": {
      "special_note": "Uses parishes instead of counties",
      "parish_pattern": "[parishname]parish.gov",
      "example_governments": [
        {
          "name": "Orleans Parish",
          "domain": "nola.gov",
          "type": "parish"
        },
        {
          "name": "East Baton Rouge Parish",
          "domain": "ebrparish.gov",
          "type": "parish"
        }
      ]
    }
  },
